/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

chrome-bg-color = #21ace3
header-height = 60px
footer-height = 0px
sidebar-width = 200px

/* Shared things */
html, body, section, header, footer, div {
	margin:0 0 0 0;
	padding:0 0 0 0;
	font-size:100%;
	font-family: 'Apple Gothic', 'Abel', sans-serif;
}

html, body {
	height:600+header-height+footer-height;
	min-width:1024+20px;
	width:100%;
}

#wrapper {
	min-height:600+header-height+footer-height;
	height:100%;
	overflow:hidden;
}

/* HEADER */
header {
	background-color:chrome-bg-color;
	height:header-height;
	width:100%;
	min-width: 1024+20px;
	opacity: 0.7;
	position: absolute;
	z-index:9999;
	transition: opacity .25s ease-in-out;
   -moz-transition: opacity .25s ease-in-out;
   -webkit-transition: opacity .25s ease-in-out;
}
header:hover {
	opacity: 0.9;
}
header.solid {
	opacity: 0.9;
}
#logo {
	margin-left:10px;
	height:header-height+-20px;
	margin-top:10px;
}
#link_section {
	margin-right:10px;
	float:right;
	font-size:80%;
}
nav {
	font-size:90%;
	position:absolute;
	top:header-height+-20px;
	left:sidebar-width+10px;
}

nav a {
	color: #000000
}

/* FOOTER */
footer {
	text-align:right;
	font-size:60%;
	height:footer-height;
	background-color: chrome-bg-color;
	position:absolute;
	bottom:0px;
	width:100%;
	vertical-align: baseline;
}
#copyright {
	margin-right:10px;
	vertical-align: baseline;
}

/* CONTENT */
#content {
	position:absolute;
	top:0px;
	width:100%;
	bottom:footer-height;
	min-height:600px;
}
#left_section {
	min-height:620px+footer-height;
	height:100%;
	width:sidebar-width;
	background-color:chrome-bg-color;
}

/* MAP */
#map_section {
	bottom:0px;
	top:0px;
	left:0px;
	right:0px;
	position:absolute;
	min-width:1024+20px;
	min-height:620px;
}

#data_section {
	text-align:center;
	position:absolute;
	top:header-height;
	width:100%;
	background-color:white;
}

.fallback_list {
	position:relative;
	top:header-height;
	left:0px;
	padding:5px;
}
.fallback_list h1 {
	font-weight: bold;
	margin-bottom: 5px;
}

#map_canvas {
	height:100%;
	width:100%;
}

#country-link-container,#site-link-container {
	display:none;
}

