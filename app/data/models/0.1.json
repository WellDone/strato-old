{
	"types": {
		"point": {
			"latitude": "float",
			"longitude": "float"
		}
	},
	"resources": {
		"monitors": {
			"id"       : "int            | pkey",
			"name"     : "string         | unique",
			"location" : "point",
			"gsmid"    : "string         | unique, required, size: 20",
			"groups"   : "refset:groups"
		},
		"groups": {
			"id"       : "int            | pkey",
			"name"     : "string         | unique, required",
			"owner"    : "ref:accounts   | required"
		},
		"accounts": {
			"name"     : "string         | pkey, required"
		},
		"users": {
			"id"       : "int            | pkey",
			"fullname" : "string         | required",
			"phone"    : "string         | unique",
			"email"    : "string         | unique",
			"accounts" : "refset:accounts| required"
		},
		"alerts": {
			"monitor" : "ref:monitors | pkey",
			"group"   : "ref:groups"
		}
	}
}